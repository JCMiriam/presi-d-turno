{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@routes/*": ["src/routes/*"],
      "@sockets/*": ["src/sockets/*"],
      "@state/*": ["src/state/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@shared": ["../shared/src"]
    }
  },
  "include": ["src"]
}
